<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.EditActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:title="Edit" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_one"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cd_two"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="contentDescription"
                android:src="@color/gray" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cd_two"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@id/cv_one"
            app:layout_constraintStart_toEndOf="@id/cv_one"
            app:layout_constraintEnd_toStartOf="@id/cv_three"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="contentDescription"
                android:src="@color/gray"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_three"
            android:layout_width="0dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toTopOf="@id/cv_one"
            app:layout_constraintStart_toEndOf="@id/cd_two"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:ignore="contentDescription"
                android:src="@color/gray"/>

        </androidx.cardview.widget.CardView>

        <ProgressBar
            android:id="@+id/loader1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cv_one"
            app:layout_constraintBottom_toBottomOf="@id/cv_one"
            app:layout_constraintStart_toStartOf="@id/cv_one"
            app:layout_constraintEnd_toEndOf="@id/cv_one"
            android:padding="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/white50"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/loader2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cd_two"
            app:layout_constraintBottom_toBottomOf="@id/cd_two"
            app:layout_constraintStart_toStartOf="@id/cd_two"
            app:layout_constraintEnd_toEndOf="@id/cd_two"
            android:padding="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/white50"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loader3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cv_three"
            app:layout_constraintBottom_toBottomOf="@id/cv_three"
            app:layout_constraintStart_toStartOf="@id/cv_three"
            app:layout_constraintEnd_toEndOf="@id/cv_three"
            android:padding="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/white50"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cv_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/about_me"/>

        <EditText
            android:id="@+id/et_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLines="5"
            android:ellipsize="end"
            android:gravity="top|start"
            android:background="@color/white"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/i_am" />

        <Button
            android:id="@+id/btn_man"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/chip_white"
            app:layout_constraintTop_toBottomOf="@id/tv_gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_woman"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/man"/>

        <Button
            android:id="@+id/btn_woman"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/chip_white"
            app:layout_constraintTop_toTopOf="@id/btn_man"
            app:layout_constraintStart_toEndOf="@id/btn_man"
            app:layout_constraintEnd_toStartOf="@id/btn_other"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/woman"/>

        <Button
            android:id="@+id/btn_other"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/chip_white"
            app:layout_constraintTop_toTopOf="@id/btn_man"
            app:layout_constraintStart_toEndOf="@id/btn_woman"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/other"/>

        <TextView
            android:id="@+id/tv_orientation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_man"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/looking_for" />

        <Button
            android:id="@+id/btn_men"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/chip_white"
            app:layout_constraintTop_toBottomOf="@id/tv_orientation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_women"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/men"/>

        <Button
            android:id="@+id/btn_women"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/chip_white"
            app:layout_constraintTop_toTopOf="@id/btn_men"
            app:layout_constraintStart_toEndOf="@id/btn_men"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="@string/women"/>

        <TextView
            android:id="@+id/tv_social"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btn_men"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/only_matches" />

        <EditText
            android:id="@+id/et_instagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_social"
            app:layout_constraintStart_toStartOf="@id/btn_man"
            app:layout_constraintEnd_toEndOf="@id/btn_other"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:hint="@string/instagram"
            android:autofillHints=""
            android:inputType="text"/>

        <EditText
            android:id="@+id/et_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_instagram"
            app:layout_constraintStart_toStartOf="@id/et_instagram"
            app:layout_constraintEnd_toEndOf="@id/et_instagram"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:hint="@string/facebook"
            android:autofillHints=""
            android:inputType="text" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_facebook"
            app:layout_constraintStart_toStartOf="@id/et_instagram"
            app:layout_constraintEnd_toEndOf="@id/et_instagram"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:hint="@string/phone"
            android:autofillHints="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/et_instagram"
            app:layout_constraintBottom_toBottomOf="@id/et_instagram"
            app:layout_constraintStart_toStartOf="@id/btn_man"
            tools:ignore="contentDescription"
            android:src="@drawable/ic_instagram"
            app:tint="@color/colorAccent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@id/et_facebook"
            app:layout_constraintBottom_toBottomOf="@id/et_facebook"
            app:layout_constraintStart_toStartOf="@id/btn_man"
            tools:ignore="contentDescription"
            android:src="@drawable/ic_facebook"
            app:tint="@color/colorAccent"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/et_phone"
            app:layout_constraintBottom_toBottomOf="@id/et_phone"
            app:layout_constraintStart_toStartOf="@id/btn_man"
            tools:ignore="contentDescription"
            android:src="@drawable/ic_phone"
            app:tint="@color/colorAccent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/et_phone"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>