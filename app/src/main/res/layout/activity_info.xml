<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".views.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_white"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="40sp"
        android:text="Info"/>

    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_info"
        app:layout_constraintStart_toStartOf="@id/tv_info"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="This values ​​cannot be modified later"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_modify"
        app:layout_constraintStart_toStartOf="@id/tv_info"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:paddingEnd="20dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:ellipsize="end"
        android:hint="Name"/>

    <EditText
        android:id="@+id/et_birthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintStart_toStartOf="@id/tv_info"
        app:layout_constraintEnd_toEndOf="@id/et_name"
        android:layout_marginTop="20dp"
        android:paddingEnd="20dp"
        android:editable="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:hint="Date of birth"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_name"
        app:layout_constraintBottom_toBottomOf="@id/et_name"
        app:layout_constraintEnd_toEndOf="@id/et_name"
        android:src="@drawable/ic_person"
        app:tint="@color/colorAccent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/et_birthday"
        app:layout_constraintBottom_toBottomOf="@id/et_birthday"
        app:layout_constraintEnd_toEndOf="@id/et_birthday"
        android:src="@drawable/ic_calendar"
        app:tint="@color/colorAccent"/>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_birthday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:background="@drawable/chip_accent"
        android:textColor="@color/white"
        android:text="Continue"/>

</androidx.constraintlayout.widget.ConstraintLayout>