<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".views.UserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_photos"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/black"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/vp_photos"
            app:layout_constraintStart_toStartOf="parent"
            app:tabIndicatorHeight="3dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vp_photos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_age"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/name"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:textSize="20sp"
            android:textColor="@color/black"
            tools:text="XX years"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/black"
            tools:text="City"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_desciption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_city"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            tools:text="This is a description."/>

        <ImageView
            android:id="@+id/iv_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_desciption"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="30dp"
            tools:ignore="contentDescription"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_instagram"/>

        <TextView
            android:id="@+id/tv_instagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_instagram"
            app:layout_constraintBottom_toBottomOf="@id/iv_instagram"
            app:layout_constraintStart_toEndOf="@id/iv_instagram"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            tools:text="instagram"/>

        <ImageView
            android:id="@+id/iv_facebook"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_instagram"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="10dp"
            tools:ignore="contentDescription"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_facebook"/>

        <TextView
            android:id="@+id/tv_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_facebook"
            app:layout_constraintBottom_toBottomOf="@id/iv_facebook"
            app:layout_constraintStart_toEndOf="@id/iv_facebook"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            tools:text="facebook"/>

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_facebook"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="10dp"
            tools:ignore="contentDescription"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_phone"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_phone"
            app:layout_constraintBottom_toBottomOf="@id/iv_phone"
            app:layout_constraintStart_toEndOf="@id/iv_phone"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            tools:text="phone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/iv_phone"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>