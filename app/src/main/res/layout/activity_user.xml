<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".views.UserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_photos"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/black"/>

        <Button
            android:id="@+id/chip_info"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:background="@drawable/chip_white50"
            app:layout_constraintTop_toTopOf="@id/vp_photos"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="false"
            android:stateListAnimator="@null"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:text="1/3"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vp_photos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_age"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Name"/>

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="24 years"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Madrid"/>

        <TextView
            android:id="@+id/tv_desciption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_city"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            android:text="This is a description."/>

        <ImageView
            android:id="@+id/iv_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_desciption"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="30dp"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_instagram"/>

        <TextView
            android:id="@+id/tv_instagram"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_instagram"
            app:layout_constraintBottom_toBottomOf="@id/iv_instagram"
            app:layout_constraintStart_toEndOf="@id/iv_instagram"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            android:text="instagram"/>

        <ImageView
            android:id="@+id/iv_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_instagram"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="10dp"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_facebook"/>

        <TextView
            android:id="@+id/tv_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_facebook"
            app:layout_constraintBottom_toBottomOf="@id/iv_facebook"
            app:layout_constraintStart_toEndOf="@id/iv_facebook"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            android:text="facebook"/>

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_facebook"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            android:layout_marginTop="10dp"
            app:tint="@color/colorAccent"
            android:src="@drawable/ic_phone"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_phone"
            app:layout_constraintBottom_toBottomOf="@id/iv_phone"
            app:layout_constraintStart_toEndOf="@id/iv_phone"
            app:layout_constraintEnd_toEndOf="@id/tv_age"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:textColor="@color/darkgray"
            android:text="phone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/iv_phone"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>